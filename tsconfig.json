{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "dist-tsc"
  ],
  "include": [
    "**/*.ts"
  ]
}